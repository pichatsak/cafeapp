<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="10">

                <!--  2      -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="10"
                    android:background="@drawable/b_dialog_g_f"
                    android:elevation="0dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="none">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">


                                <ImageView
                                    android:id="@+id/ex_dialog_add_topping"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:background="@drawable/exit_b"
                                    android:clickable="true"
                                    android:elevation="2dp"
                                    android:padding="5dp"
                                    android:src="@drawable/ic_baseline_clear_24" />


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:paddingLeft="40dp"
                                    android:paddingTop="20dp"
                                    android:paddingRight="40dp"
                                    android:paddingBottom="20dp">


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="เลือกประเภทการขาย"
                                                android:textColor="@color/main1"
                                                android:textSize="20sp"
                                                android:textStyle="bold" />
                                        </LinearLayout>

                                        <TextView
                                            android:id="@+id/chooseSale"
                                            android:layout_width="match_parent"
                                            android:layout_height="60dp"
                                            android:layout_marginTop="30dp"
                                            android:background="@drawable/design_fram_edittex1"
                                            android:backgroundTint="@color/white"
                                            android:clickable="true"
                                            android:drawableEnd="@drawable/ic_shop_svgrepo_com"
                                            android:drawableTint="@color/main1"
                                            android:foreground="?android:attr/selectableItemBackground"
                                            android:gravity="center"
                                            android:paddingRight="13dp"
                                            android:text="ขายหน้าร้าน"
                                            android:textColor="@color/main"
                                            android:textSize="18sp"
                                            android:textStyle="normal" />

                                        <TextView
                                            android:id="@+id/chooseGrab"
                                            android:layout_width="match_parent"
                                            android:layout_height="60dp"
                                            android:layout_marginTop="20dp"
                                            android:background="@drawable/design_fram_edittex1"
                                            android:backgroundTint="@color/white"
                                            android:clickable="true"
                                            android:drawableEnd="@drawable/ic_grab_logo_svgrepo_com"

                                            android:foreground="?android:attr/selectableItemBackground"
                                            android:gravity="center"
                                            android:paddingRight="13dp"
                                            android:text="Grab"
                                            android:textColor="#00a84b"
                                            android:textSize="18sp"
                                            android:textStyle="normal" />

                                        <TextView
                                            android:id="@+id/chooseFood"
                                            android:layout_width="match_parent"
                                            android:layout_height="60dp"
                                            android:layout_marginTop="20dp"
                                            android:background="@drawable/design_fram_edittex1"
                                            android:backgroundTint="@color/white"
                                            android:clickable="true"
                                            android:drawableEnd="@drawable/ic_foodpanda_svgrepo_com"
                                            android:drawableTint="@color/foodpanda"
                                            android:foreground="?android:attr/selectableItemBackground"
                                            android:gravity="center"
                                            android:paddingRight="13dp"
                                            android:text="Food Panda"
                                            android:textColor="@color/foodpanda"
                                            android:textSize="18sp"
                                            android:textStyle="normal" />

                                        <TextView
                                            android:id="@+id/chooseRobin"
                                            android:layout_width="match_parent"
                                            android:layout_height="60dp"
                                            android:layout_marginTop="20dp"
                                            android:background="@drawable/design_fram_edittex1"
                                            android:backgroundTint="@color/white"
                                            android:clickable="true"
                                            android:drawableEnd="@drawable/ic_rbh_logo_01_e1635235514424"
                                            android:drawableTint="@color/robincolor"
                                            android:foreground="?android:attr/selectableItemBackground"
                                            android:gravity="center"
                                            android:paddingRight="13dp"
                                            android:text="Robinhood"
                                            android:textColor="@color/robincolor"
                                            android:textSize="18sp"
                                            android:textStyle="normal" />

                                    </LinearLayout>


                                </LinearLayout>


                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="20dp">

                            </LinearLayout>
                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>