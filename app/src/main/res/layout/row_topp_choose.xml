<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingRight="10dp"
    android:layout_height="100dp">
    <LinearLayout
        android:id="@+id/contChoose"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/b_non_click_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameToppingShow"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center|center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="ใส่ไข่"
            android:textColor="@color/main"
            android:textSize="18sp" />
        <LinearLayout
            android:weightSum="12"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/delTp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_forbidden_cancel_svgrepo_com"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/main"
                    android:id="@+id/tvNum"
                    android:textSize="20sp"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView

                    android:id="@+id/plusTp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_add_svgrepo_com"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>